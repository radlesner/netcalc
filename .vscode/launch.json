    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug manual args",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/debug/netcalc",
            "args": [
                "192.168.0.1",
                "24"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Debug interfaces",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/debug/netcalc",
